<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <!--create ba_user-->
    <changeSet id="1.0.0" author="pavel.skochko">
        <createTable tableName="ba_user">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(300)">
                <constraints unique="true"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <!--create ba_role-->
    <changeSet id="1.0.1" author="pavel.skochko">
        <createTable tableName="ba_role">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="now()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="now()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <!--create ba_user_roles-->
    <changeSet id="1.0.2" author="pavel.skochko">
        <createTable tableName="ba_user_roles">

            <column name="user_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>

            <column name="role_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <!--add fk_user_roles_ba_user-->
    <changeSet id="1.0.3" author="pavel.skochko">
        <addForeignKeyConstraint baseTableName="ba_user_roles"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_roles_ba_user"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="ba_user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!--fk_user_roles_ba_roles-->
    <changeSet id="1.0.4" author="pavel.skochko">
        <addForeignKeyConstraint baseTableName="ba_user_roles"
                                 baseColumnNames="role_id"
                                 constraintName="fk_user_roles_ba_roles"
                                 onUpdate="CASCADE"
                                 onDelete="RESTRICT"
                                 referencedTableName="ba_role"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!--insert roles-->
    <changeSet id="1.0.5" author="pavel.skochko">
        <insert tableName="ba_role">
